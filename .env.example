# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/text2dsl_test
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SCHEMA_CACHE_TTL=3600

# OpenSearch Configuration
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_INDEX=rag_examples
OPENSEARCH_INDEX_EXAMPLES=text2dsl_examples
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=false

# LLM Configuration
LLM_PROVIDER=bedrock
LLM_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
LLM_API_BASE=
LLM_API_KEY=your-api-key-here
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=120

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Bedrock Embedding Configuration
BEDROCK_REGION=us-east-1
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_EMBEDDING_BATCH_SIZE=25

# Agent Configuration
CONFIDENCE_THRESHOLD=0.8
MAX_ITERATIONS=3
RAG_TOP_K=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Observability - Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Observability - Tracing
ENABLE_TRACING=true
CORRELATION_ID_HEADER=X-Correlation-ID

# Expert Review Queue
REVIEW_QUEUE_ENABLED=true
AUTO_QUEUE_LOW_CONFIDENCE=true
LOW_CONFIDENCE_THRESHOLD=0.6

# Default Admin Account
# Email: admin@text2dsl.com
# Password: Admin123!
# Role: super_admin
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7
API_KEY_HEADER=X-API-Key
ALLOW_SELF_REGISTRATION=false

# AgentCore Configuration
AGENTCORE_MODE=local
AGENTCORE_URL=http://localhost:8001
AGENTCORE_API_KEY=
AGENTCORE_TIMEOUT=120
